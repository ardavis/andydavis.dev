%canvas#desk_canvas
#screen_overlay.cli-container{ data: { controller: 'cli' } }
  .cli-header
    %span Terminal - Andy's Portfolio
    %button.btn.btn-sm.btn-danger{:onclick => "document.getElementById('monitor').classList.add('d-none')"} âœ•
  .cli-body
    #cli-output
      %p $ dir
      .project-list
        - @projects.each do |project|
          .project{ "data-project": "#{project[:name]}" }
            = image_tag %project(:thumbnail="")
            %img.thumbnail{:alt => "#{project[:name]} thumbnail", :src => "#{asset_path(project[:thumbnail])}"}/
            %span= project[:name]
            %p= project[:description]
    #cli-input
      %span $
      %input#cli-command{:placeholder => "Type 'launch <project>' or click a project", :type => "text"}/
    #website-display.d-none
      #terminal-output
      %iframe#website-iframe.w-100{:height => "600px", :style => "border: none;"}



